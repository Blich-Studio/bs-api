{
  "name": "ts-blog",
  "version": "0.2.6",
  "type": "module",
  "module": "src/server.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "release": "standard-version",
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:types": "vitest run src/__tests__/unit/types",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration"
  },
  "standard-version": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "refactor",
      "perf",
      "test"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@typescript-eslint/utils": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "jq": "^1.7.2",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elastic/ecs-morgan-format": "^1.5.1",
    "@supabase/supabase-js": "^2.75.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-zod-api": "^25.5.3",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "yamljs": "^0.3.0",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "bun eslint --fix",
      "bun prettier --write"
    ],
    "test/**/*.{js,ts,tsx}": [
      "bun eslint --fix",
      "bun prettier --write"
    ]
  }
}
