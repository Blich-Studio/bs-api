{
  "name": "ts-blog",
  "version": "0.2.1",
  "type": "module",
  "module": "src/server.ts",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun --minify",
    "start": "bun run src/server.ts",
    "start:prod": "NODE_ENV=production bun run dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "bun eslint src test",
    "lint:fix": "bun eslint src test --fix",
    "format": "bun prettier --write src test",
    "format:check": "bun prettier --check src test",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "standard-version": {
    "types": [
      "feat",
      "fix",
      "chore",
      "docs",
      "refactor",
      "perf",
      "test"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "@typescript-eslint/utils": "^8.46.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "^8.0.0",
    "jq": "^1.7.2",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "standard-version": "9.5.0",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "bun eslint --fix",
      "bun prettier --write"
    ],
    "test/**/*.{js,ts,tsx}": [
      "bun eslint --fix",
      "bun prettier --write"
    ]
  }
}
